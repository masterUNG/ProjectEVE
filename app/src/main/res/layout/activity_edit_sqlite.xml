<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eve.myapplication.EditSQLiteActivity"
    android:background="@drawable/bg6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:padding="15dp"
        android:background="#82ffffff"
        android:id="@+id/linearLayout4"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="แก้ไขข้อมูล"
            android:id="@+id/textView2"

            android:textSize="@dimen/h1"
            android:layout_gravity="center_horizontal"
            android:textColor="#060606" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText5"
                android:text="ชื่อเชื้อ" />

            <EditText
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtNameED"
                android:textStyle="bold|italic"
                android:layout_marginLeft="65dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:text="วันที่" />

            <EditText
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtDateED"
                android:layout_marginLeft="85dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/editText7"
                android:text="จำนวนครั้ง" />

            <EditText
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:id="@+id/edtCountED"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="306dp"
            android:layout_height="50dp"
            android:weightSum="1"
            android:layout_marginLeft="0dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:text="เวลาเริ่มต้น"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtSaveHr"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="70dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text=":" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtSaveMin"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText4"
                android:text="จำนวนชั่วโมง"
                android:layout_weight="1" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtCount1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtCount2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtCount3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp">

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtCount4"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtCount5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp" />

            <EditText
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:id="@+id/edtCount6"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText8"
                android:text="คำอธิบาย" />

            <EditText
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:id="@+id/edtDataEDA"
                android:lines="3"
                android:gravity="top"
                android:layout_above="@+id/button9"
                android:layout_alignRight="@+id/edtResultsED"
                android:layout_alignEnd="@+id/edtResultsED"
                android:layout_marginLeft="35dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText9"
                android:text="ผลการทดลอง" />

            <EditText
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:id="@+id/edtResultsED"
                android:lines="3"
                android:gravity="top"
                android:layout_weight="0.17"
                android:layout_gravity="bottom"
                android:layout_above="@+id/button9"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:onClick="clickBackEdit"
        android:id="@+id/button9"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:onClick="clickUpdateSQLite"
        android:id="@+id/button6"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
